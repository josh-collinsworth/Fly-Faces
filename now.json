{
    "version": 2,
    "alias": [
        "fly-faces.now.sh"
    ],
    "env": {
        "CLIENT_ID": "@namely_client_id",
        "CLIENT_SECRET": "@namely_client_secret"
    },
    "github": {
        "autoAlias": true
    },
    "builds": [
        {
            "src": "package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "api/*.js",
            "use": "@now/node"
        }
    ],
    "static": {
        "headers": [
            {
                "source": "**/*.@(html)",
                "headers": [
                    {
                        "key": "Referrer-Policy",
                        "value": "no-referrer-when-downgrade"
                    },
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src https:; img-src https: data:; report-uri https://TODO-GET-YOUR-OWN-ACCOUNT.report-uri.com/r/d/csp/enforce"
                    },
                    {
                        "key": "X-XSS-Protection",
                        "value": "1; mode=block"
                    },
                    {
                        "key": "Feature-Policy",
                        "value": "geolocation 'self'; notifications 'self'; push 'self'; microphone 'self'; camera 'self'"
                    }
                ]
            },
            {
                "source": "*",
                "headers": [
                    {
                        "key": "Strict-Transport-Security",
                        "value": "max-age=31536000"
                    },
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "SAMEORIGIN"
                    }
                ]
            }
        ]
    }
}